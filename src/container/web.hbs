{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
        
    {{#with web}}
    <main>
        <section>
            <h3>{{> inf title='languages' bold=true}}</h3>
            <ul>
                {{#each languages}}
                    <li>
                        {{> inf title='name' info=name}}
                        {{> inf title='version' info=version}}
                        {{> inf title='description' info=description p=true}}

                        {{#if elements}}
                            {{> inf title='elements'}}
                            <ul>
                                
                                {{#each elements}}
                                    <li>
                                        {{> inf title='name' info=name}}
                                        {{> inf title='description' info=description p=true}}
                                        {{> inf title='attributes'}}
                                        <ul>
                                            {{#each attributes}}
                                                <li>
                                                    {{> inf title='name' info=name}}
                                                    {{> inf title='description' info=description p=true}}
                                                    <hr>
                                                    <br>
                                                </li>
                                            {{/each}}
                                        </ul>
                                        <br>
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}

                        {{#if properties}}
                            {{> inf title='properties'}}
                            <ul>
                                
                                {{#each properties}}
                                    <li>
                                        {{> inf title='name' info=name}}
                                        {{> inf title='description' info=description p=true}}
                                        {{> inf title='values'}}
                                        <ul>
                                            {{#each values}}
                                                <li>
                                                    {{> inf title='value' info=value}}
                                                    {{> inf title='description' info=description p=true}}
                                                    <hr>
                                                    <br>
                                                </li>
                                            {{/each}}
                                        </ul>
                                        <br>
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}

                        {{#if functions}}
                            {{> inf title='functions'}}
                            <ul>
                                
                                {{#each functions}}
                                    <li>
                                        {{> inf title='name' info=name}}
                                        {{> inf title='description' info=description p=true}}
                                        {{> inf title='parameters'}}
                                        <ul>
                                            {{#each parameters}}
                                                <li>
                                                    {{> inf title='name' info=name}}
                                                    {{> inf title='type' info=type}}
                                                    {{> inf title='description' info=description p=true}}
                                                    <hr>
                                                    <br>
                                                </li>
                                            {{/each}}
                                        </ul>
                                        <br>
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}

                    </li>
                {{/each}}
            </ul>

            
        </section>

    </main>
    {{/with}}


</div>

