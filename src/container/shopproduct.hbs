{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


        

    <div class="m-1">
        
        {{> shopheader navigation=navigation links=links}}

        {{> breadcrumb breadcrumb=breadcrumb}}
        
        <div class="row g-1 mb-5 pb-5">
            {{#with productData}}
                <div class="col-6">
                    <img src="{{img}}" class="img-fluid" alt="">

                    {{#with info}}
                        <div class="card mt-4 mb-4" style="">
                            <div class="card-body ">
                                <h6 class="card-title">{{title}}</h6>
                                <p class="card-text mb-1">{{about}}</p>
                                <h3>{{price}}</h3>
                                <div class="">
                                    {{#each category}}
                                    
                                        {{#if isHot}}
                                            <span class="badge text-bg-warning rounded-pill"> {{name}} </span>
                                        {{/if}}
                                        {{#if isNew}}
                                            <span class="badge text-bg-primary rounded-pill"> {{name}} </span>
                                        {{/if}}
                                        {{#if isBonus}}
                                            <span class="badge text-bg-info rounded-pill"> {{name}} </span>
                                        {{/if}}
                                    
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    {{/with}}

                </div>

                <div class="col-1"></div>

                <div class="col-5">
                    {{#with item}}
                        <table class="table">
                            <thead>
                                {{#each head}}
                                    <th>
                                        {{this}}
                                    </th>
                                {{/each}}
                            </thead>
                            <tbody>
                                {{#each body}}
                                    <tr>
                                        {{#each this}}
                                            {{#if @first}}
                                                <th>{{this}}</th>
                                            {{else}}
                                                <td>{{this}}</td>
                                            {{/if}}
                                        {{/each}}
                                    </tr>
                                {{/each}}
                                
                            </tbody>
                        </table>
                    {{/with}}

                    {{#with param}}
                        <div class="card mb-3" style="">
                            <div class="card-header">
                                {{title}}
                            </div>
                            <ul class="list-group list-group-flush">
                                {{#each list}}
                                    <li class="list-group-item">{{this}}</li>
                                {{/each}}
                                
                            </ul>
                        </div>
                    {{/with}}

    
                    {{#with alert}}
                    {{#if isError}}
                        <div class="alert alert-danger m-0" role="alert">
                            {{text}}
                        </div>
                    {{/if}}
                    {{/with}}
                </div>
                {{#with actionList}}
                <div class="col-12 mt-5 p-0" >
                    <div class="card p-0" style="">
                        <div class=" card-body p-2 ps-4">
                            {{#each this}}
                                <button class="btn 
                                {{#if isWarning}}btn-warning{{/if}}
                                {{#if isError}}btn-outline-danger{{/if}}
                                {{#if isSuccess}}btn-success{{/if}}
                                {{#if isGood}}btn-outline-success{{/if}} me-3">

                                    {{name}}

                                </button>
                            {{/each}}
                        </div>
                    </div>
                </div>
                {{/with}}
                
            {{/with}}
        </div>



        <hr class="m-0 mt-5">
        
        <div class="row g-1 mb-5 mt-4 justify-content-center">
            {{#with goodsOtherBlock}}
                <h3 class="text-center">{{title}}</h3>
                
                {{#each cards}}
                <div class="col-4">
                    {{> shopcard img=image alt=title title=title isHot=isHot isNew=idNew text=description}}
                </div>
                {{/each}}

                
            {{/with}}
        </div>

        <hr class="m-0">

       

        {{> shopaction action=service}}



        {{> shopfooter footer=footer}}
                    

    </div>




