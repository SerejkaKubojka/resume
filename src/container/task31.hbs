{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
        

    <main>
        

        <section>
            {{#with navigation}}

                <ul class="nav">
                    {{#each links}}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{link}}">{{text}}</a>
                        </li>
                    {{/each}}
                    <a href="{{button.href}}" class="btn btn-primary">{{button.text}}</a>
                </ul>

            {{/with}}

            <hr>
            <br>
            
            {{#with header}}

                <h1>{{title}}</h1>
                <p>{{description}}</p>
                {{#with button}}
                    <a href="{{link}}" class="btn btn-primary btn-sm">{{text}}</a>
                {{/with}}

            {{/with}}

            <br>
            <br>
            <hr>
            <br>

            {{#with city}}
            <h2>{{title}}</h2>
            <div class="row">
            {{#each cards}}
                <div class="col-sm-6 mb-3 mb-sm-3">
                    {{> card img=picture.src alt=picture.alt title=title text=description button=button.text link=button.href}}
                </div>
            {{/each}}
            </div>
            {{/with}}
                
            <br>
            <hr>
            <br>

            {{#with winner}}
            <h2>{{title}}</h2>
            {{#with table}}
                <table class="table">
                    <thead>
                        {{#each head}}
                            <th>
                                {{this}}
                            </th>
                        {{/each}}
                    </thead>
                    <tbody>
                        {{#each user}}
                            <tr>
                                <th>{{place}}</th>
                                <td>{{name}}</td>
                                <td>{{surname}}</td>
                                <td>{{nickname}}</td>
                            </tr>
                        {{/each}}
                        
                    </tbody>
                </table>
            {{/with}}
            {{/with}}
                
            <br>
            <hr>
            <br>
            
            {{#with gallery}}
                <h2>{{title}}</h2>
                <div class="row cols-12">
                    {{#each cards}}
                        <div class="col-4">
                            <div class="card" style="width: 100%;">
                                <div class="card-header">
                                    {{name}}
                                </div>
                                <ul class="list-group list-group-flush">
                                    {{#each items}}
                                        <li class="list-group-item">{{this}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{/with}}
            
                
            <br>
            <hr>
            <br>

            {{#with relaxion}}
                <div class="display-3">{{title}}</div>
                <br>
                <div class="row cols-10 g-4">
                    {{#each cards}}
                    <div class="col-5">
                        <div class="card text-bg-secondary" style="max-width: 18rem;">
                            <div class="card-header">{{header}}</div>
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">{{description}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            {{/with}}
                
            <br>
            <hr>
            <br>

            {{#with rest}}
                
                <div class="row cols-12">
                    {{#each cards}}
                    <div class="col-6">
                        <div class="card text-center">
                            <div class="card-header">
                                {{header}}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">{{description}}</p>
                                <a href="#" class="btn btn-primary">{{button}}</a>
                            </div>
                            <div class="card-footer text-body-secondary">
                                {{footer}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    
                </div>
            {{/with}}
                
            <br>
            <hr>
            <br>

            {{#with proposition}}
                <div class="display-2">{{title}}</div>
                <br>
                <div class="row cols-10 g-4">
                    {{#each cards}}
                    <div class="col-5">
                        <div class="card text-bg-warning" style="max-width: 18rem;">
                            <div class="card-header">{{header}}</div>
                            <div class="card-body">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">{{description}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            {{/with}}
                
            <br>
            <hr>
            <br>

            {{#with footer}}
                <h5>{{title}}</h5>
                <br>
                <div class="row cols-9 gy-4">
                    <div class="col-3 gy-4">
                        {{#each navigation}}
                        
                            <a href="{{link}}" class="link-primary link-underline-opacity-0">{{text}}</a>
                            <br>
                            <br>
                        
                        {{/each}}
                    </div>
                    <div class="col-3">
                        {{#each socialMedia}}
                        
                            <a href="{{link}}" class="btn btn-outline-info">{{name}}</a>
                            <br>
                            <br>
                        
                        {{/each}}
                    </div>
                    <div class="col-3">
                        {{#each partners}}
                        
                            <a href="{{link}}" class="btn btn-outline-dark">{{name}}</a>
                            <br>
                            <br>
                        
                        {{/each}}
                    </div>
                </div>
            {{/with}}
            

           
        </section>

    </main>


</div>

