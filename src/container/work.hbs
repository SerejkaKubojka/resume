{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
        
{{#with main}}
    <main>

        <section>
        <ul>
            {{#each works}}
            <li>
                <div>{{position}}</div>

                <br>

                <div>{{duration.from}} - 
                    {{#if duration.to}} 
                        {{duration.to}}
                    {{else}}
                        (now working) 
                    {{/if}} 
                </div>

                <br>

                <div>
                    {{#if company.url}}
                    {{> link href=company.url text=company.name blank=true noLine=true}}
                    {{else}}
                    <b>{{company.name}}</b>
                    {{/if}}
                </div>

                <br><br>
                <div>
                <strong>Projects ({{projectAmount}}) </strong>
                </div>

                <BR>

                <ul>
                    {{#each projects}}
                    <li>
                        <div>{{> link href=url text=name blank=true noLine=true}}</div>
                        <div><p>{{about}}</p></div>
                        <br>
                        <em>Project stacks ({{stackAmount}})</em>
                        <ul>

                            {{#each stacks}}
                                <li>
                                    {{name}}
                                </li>
                            {{/each}}

                        </ul>

                        <br>
                        <em>Project awards</em>
                        <ul>

                            {{#each awards}}
                                <li>
                                    {{name}}
                                </li>
                            {{/each}}

                        </ul>
                    </li>
                    
                    {{/each}}
                </ul>

            </li>
            <hr>
            <br>
            {{/each}}
        </ul>
        </section>

    </main>
{{/with}}

</div>

