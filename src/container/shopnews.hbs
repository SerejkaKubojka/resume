{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


        

    <div class="m-1">
        
        {{> shopheader navigation=navigation links=links}}

        {{> breadcrumb breadcrumb=breadcrumb}}
        
        <div class="row g-1 mb-5 pb-5">
            {{#with newsData}}
                <div class="col-12">
                    <img src="{{photo}}" class="img-fluid mb-4" style="width:100%" alt="">

                    {{#with head}}

                        <h1 class="mb-3">{{heading}}</h1>
                        <p class="mb-5">{{description}}</p>

                    {{/with}}

                    {{#each body}}
                        <h5>{{title}}</h5>
                        <p>{{text}}</p>
                    {{/each}}

                </div>
            {{/with}}

            <hr>

            <div class="row my-5 col-12 p-0">
            {{#with newsOtherBlock}}
                <h2 class=" text-center p-0">{{title}}</h2>

                {{#each cards}}
                    {{> shopcard-news title=title isNew=idNew isTop=isTop description=description}}
                {{/each}}

            {{/with}}
            </div>
            

                
        <hr class="m-0">

       

        {{> shopaction action=service}}



        {{> shopfooter footer=footer}}
                    

    </div>




