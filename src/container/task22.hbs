{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
        

    <main>
        <section>
            <h1 class="text-center">{{page_header.title}}</h1>
            <p class="text-center text-uppercase">{{page_header.description}}</p>
        </section>
        <section>
            {{#with section}}
                {{#with about_us}}
                <div class="card">
                    <div class="card-body">
                        <div class="display-1 text-end">{{title_list.main}}</div>
                        <br>
                        <h2 class="text-end">{{title_list.sub}}</h2>
                        <br>
                        <button href="#" class="btn btn-outline-info btn-sm">{{button.text}}</button>
                    </div>
                </div>
                {{/with}}
            
                <br>

                {{#with advantage}}
                <div class="card">
                    <div class="card-body">
                        <div class="display-5 text-secondary">{{title}}</div>
                        <br>
                        {{#with efficiency}}
                             <div class="card">
                                <div class="card-body"> 
                                    <div class="display-4 text-secondary">{{title}}</div>
                                    <br>
                                    <h6>{{sub_title}}</h6>
                                    <p>{{description}}</p>
                                    <button  class="btn btn-outline-warning btn-sm">{{button}}</button>
                                </div>
                            </div>
                        {{/with}}

                        <br>

                        {{#with innovation}}
                             <div class="card">
                                <div class="card-body"> 
                                    <div class="display-4 text-secondary text-center">{{title}}</div>
                                    <br>
                                    <h6 class="text-center">{{sub_title}}</h6>
                                    <p class="text-center">{{description}}</p>
                                    <button  class="btn btn-outline-warning btn-sm">{{button}}</button>
                                </div>
                            </div>
                        {{/with}}
                        
                        <br>

                        {{#with collaboration}}
                             <div class="card">
                                <div class="card-body"> 
                                    <div class="display-4 text-secondary text-end">{{title}}</div>
                                    <br>
                                    <h6 class="text-end">{{sub_title}}</h6>
                                    <p class="text-end">{{description}}</p>
                                    <button  class="btn btn-outline-warning btn-sm">{{button}}</button>
                                </div>
                            </div>
                        {{/with}}
                        
                    </div>
                </div>
                {{/with}}
                  
                <br>

                {{#with agreement}}
                <div class="card">
                    <div class="card-body">
                        <div class="display-5 text-secondary">{{title}}</div>
                        
                        <br>

                        {{#with info}}
                             <div class="card">
                                <div class="card-body"> 
                                    <h5 class="">{{sub_title}}</h5>
                                    {{#with detail}}
                                        <div class="card">
                                            <div class="card-body"> 
                                                <p class="">{{text}}</p>
                                                <button  class="btn btn-success btn-sm">{{button}}</button>
                                            </div>
                                        </div>
                                    {{/with}}
                                </div>
                            </div>
                        {{/with}}
                    </div>
                </div>
                {{/with}}
            {{/with}}
        </section>

    </main>


</div>

