{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
        

    <main>

        <section>
            <h3>{{name}}</h3>
            {{> inf title='description' info=description}}
            <br>
            <div>{{history.founder}} <span class="badge text-bg-primary"> {{history.year}}</span></div>
            <hr>
            <br>
            {{> list_of_text arr=types active='types'}}
            <hr>
            <br>
            {{> inf title='syntax' bold=true}}
            {{#with syntax}}
                <ul>
                {{> inf title='variables' badge=variables}}
                {{> inf title='functions' badge=functions}}
                {{> inf title='conditionals' badge=conditionals}}
                {{> inf title='loops' badge=loops}}
                {{> inf title='classes' badge=classes}}
                </ul>
            {{/with}}
            <hr>
            <br>

            {{> list_of_text arr=features active='features'}}
            <br>
            {{> list_of_text arr=libraries active='libraries'}}
            <br>
            {{> list_of_text arr=tools active='tools'}}
            <hr>
            <br>
            {{> inf title='community' bold=true}}
            <br>
            <ul>
                {{#each community}}
                    <button  class="btn btn-primary position-relative btn-sm" >
                        {{name}} 
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"> 
                            {{type}}
                            <span class="visually-hidden">unread messages</span>
                        </span>
                    </button >
                    <br>
                    <br>
                {{/each}}
            </ul>
            

           
            
        </section>

    </main>


</div>

