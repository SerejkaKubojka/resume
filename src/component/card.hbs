
        <div class="card" style="">
            {{#if img}}
                <img src="{{img}}" class="card-img-top" alt="{{alt}}">
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">
                    {{title}}
                    {{#if price}}
                        <span class="badge text-bg-primary"> {{price}}$</span>
                    {{/if}}
                    {{#if id}}
                        <span class="badge text-bg-primary"> {{id}}</span>
                    {{/if}}
                    {{#if warning}}
                        <span class="badge text-bg-warning rounded-pill"> {{txt-warning}}</span>
                    {{/if}}
                    {{#if primary}}
                        <span class="badge text-bg-primary rounded-pill"> {{txt-primary}}</span>
                    {{/if}}
                    
                </h5>
                {{#if text}}
                    <p class="card-text">{{text}}</p>
                {{/if}}
                <a href="{{link}}" class="btn btn-primary">
                    {{#if button}}
                        {{button}}
                    {{else}}
                        Comming soon
                    {{/if}}
                </a>
            </div>
        </div>