
        <div class="card" style="width: 18rem;">
            {{#if img}}
                <img src="{{img}}" class="card-img-top" alt="{{alt}}">
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">
                    {{title}}
                    {{#if price}}
                        <span class="badge text-bg-primary"> {{price}}$</span>
                    {{/if}}
                    {{#if id}}
                        <span class="badge text-bg-primary"> {{id}}</span>
                    {{/if}}
                </h5>
                {{#if text}}
                    <p class="card-text">{{text}}</p>
                {{/if}}
                <a href="#" class="btn btn-primary">Comming soon</a>
            </div>
        </div>