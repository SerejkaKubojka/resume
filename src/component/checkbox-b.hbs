<div class="form-check">
  <input class="form-check-input" type="checkbox" name="{{name}}" id="{{id}}" 
  {{#if checked}}
    checked
  {{else}}
    {{#if @first}} checked=true {{/if}}
  {{/if}}>
  <label class="form-check-label" for="flexRadioDefault1">
    {{label}}
  </label>
  <div id="{{id}}" class="form-text m-0 {{#if error}}text-bg-danger{{/if}}">{{caption}}{{description}}{{error}}</div>
</div>